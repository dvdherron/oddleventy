theme: herman
dest: _site/style/

package: ./package.json
shortcutIcon: ./content/favicon.ico
verbose: true

groups:
  Sass Tokens:
    config-animation: Animations
    config-color: Colors
    config-fonts: Fonts
    config-scale: Spacing & Sizes
  CSS Variables:
    init-colors: Global Colors
    init-themes: Preset Themes
    init-scale: Spacing & Sizes
  Forms:
    tools-range: Range Input Tools
    input-range: Range Inputs
  Patterns:
    a11y: Accessibility
    type: Typography
    icons: SVG Icons

herman:
  extraDocs:
    - name: Getting Started
      path: ./styleguide.md
  extraLinks:
    - name: Eleventy
      url: http://www.11ty.io
    - name: Accoutrement
      url: https://oddbird.net/accoutrement/
    - name: Cascading Color Systems
      url: https://cascading-colors.netlify.com/
    - name: Herman
      url: https://oddbird.net/herman/
  fontpath: src/fonts/
  sass:
    jsonfile: _built/css/json.css
