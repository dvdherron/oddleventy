theme: herman
dest: _site/style/

display:
  access: public

package: ./package.json
shortcutIcon: ./favicon.ico
verbose: true

groups:
  Tools:
    tools-range: Range Input Prefixes
  Design Tokens:
    config-animation: Animations
    config-color: Brand Colors
    config-themes: Theme Colors
    config-grids: Grids
    config-fonts: Fonts
    config-scale: Ratios & Sizes
    config-patterns: Patterns

herman:
  extraLinks:
    - name: 'Eleventy'
      url: http://www.11ty.io
    - name: 'Accoutrement'
      url: https://oddbird.net/accoutrement/
    - name: 'Cascading Color Systems'
      url: https://cascading-colors.netlify.com/
    - name: 'Herman'
      url: https://oddbird.net/herman/
  fontpath: 'src/fonts/'
  sass:
    includepaths: ['src/scss']
    includes: ['config/index']
    jsonfile: '_built/css/json.css'
