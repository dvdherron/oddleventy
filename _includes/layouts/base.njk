{%- import 'utility.macros.njk' as utility -%}

<!doctype html>
<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport"
      content="width=device-width, initial-scale=1.0" />

    <title>{{ renderData.title or title or site.title }}</title>
    <meta name="description"
      content="{{ site.description or page.description }}" />

		{% for url in site.styles %}
			<link rel="stylesheet"
				href="/assets/css/{{ url }}" />
		{% endfor %}

    {% include 'site/og.njk' %}
    {% include 'site/feed.njk' %}
	</head>

	<body>
		{% include 'site/banner.njk' %}
		{% include 'site/nav.njk' %}

		<main {{ utility.attr_if('class', templateClass) }}>
			{% block content %}
				{{ content | safe }}
			{% endblock %}
		</main>

		<footer>
			Â© {% getDate 'year' %}
			<a href="mailto:{{ site.email }}">
				{{ site.author }}
			</a>
		</footer>

		<!-- Current page: {{ page.url | url }} -->
	</body>
</html>
