{% import 'utility.macros.njk' as utility %}
{% import 'embed.macros.njk' as embed %}
{% import 'layout.macros.njk' as layout %}
{% import 'contact.macros.njk' as contact %}

{{ layout.title('Meet the birds') }}

{% set style = {
  '--media-content': 'var(--small-page)'
} | styles %}

{% call layout.grid(attrs={'style': style}) %}
  {% for bird in collections.birds | active %}
    {% call embed.media_block(
      media=embed.svg('faces/' + bird.data.bird),
      name='bird'
    ) %}
      <h3>{{ utility.link_if(bird.data.title, bird.url) }}</h3>

      {{ bird.data.summary | md | safe }}

      {{ contact.social(
        data=bird.data.social,
        name=bird.data.bird | capitalize
      ) }}
    {% endcall %}
  {% endfor %}
{% endcall %}
