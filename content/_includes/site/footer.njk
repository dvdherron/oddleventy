{% import 'contact.macros.njk' as contact %}
{% import 'content.macros.njk' as render %}
{% import 'utility.macros.njk' as utility %}

<div
  data-layout="footer">
  {{ contact.form(name="contact-footer") }}

  {% set info = collections.all | getPage('/_sitedata/info/') %}

  <footer role="contentinfo">
    <div class="colophon">
      {{ info.data.colophon | md | safe }}
