{# @docs
label: client
category: metadata
note: Show the client name on a client project
params:
  name:
    type: string
#}
{% macro client(name) -%}
  {%- if name %}
    <i>for</i>
    <b>{{ name | mdInline | safe }}</b>
  {% endif -%}
{%- endmacro %}

{# @docs
label: where
category: metadata
