{% macro form(
  next='/contact/thanks/',
  submit='Send!',
  name='contact'
) %}
<form
  name="{{ name or 'contact' }}"
  data-form="{{ name or 'contact' }}"
  method="POST"
  action="{{ next }}"
  netlify-honeypot="subject"
  data-netlify="true">
  <div data-fieldgroup="contact-info">
    <label data-field="name">
      <span data-label>Name:</span>
      <input
        data-input="text"
        type="text"
        name="name"
        required />
    </label>
    <label data-field="email">
      <span data-label>Email:</span>
      <input
        data-input="text"
        type="email"
        name="email"
        required />
    </label>
  </div>
  <label data-field="message">
    <span data-label>Message:</span>
    <textarea
      data-input="textarea"
      name="message"
      required></textarea>
  </label>
  <label data-field="source">
    <span data-label>How did you find OddBird?</span>
    <input
      data-input="text"
      type="text"
      name="source" />
  </label>
  <label hidden>
    <span>Don't fill out this field:</span>
    <input name="subject" />
  </label>
  <div class="form-actions">
    <button
      data-btn="submit"
      type="submit">
      {{ submit }}
    </button>
  </div>
</form>
{% endmacro %}
