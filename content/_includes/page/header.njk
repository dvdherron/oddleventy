<header class="page-header">
  {% if image.src %}
    <div class="hero">
      <img
        src="{{ site.images + image.src }}"
        alt="{{ image.alt or '' }}"
        class="hero-image"/>
    </div>
  {% endif %}

  <h1 id="page-title"
    tabindex="-1">
    {{ meta.banner | mdInline | safe }}
  </h1>

  {% include 'page/meta.njk' %}
</header>
