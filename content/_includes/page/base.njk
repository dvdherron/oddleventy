{%- import 'utility.macros.njk' as utility -%}
{%- import 'layout.macros.njk' as layout -%}

{% include "page/header.njk" %}

<main data-layout="main">
  {% if (content or summary) %}
    <div
      data-main
      data-typeset>
      {{ content | typogr | safe }}
    </div>
  {% endif %}

  {% set resources = collections[index] if index else none %}
  {% set resources = collections._post | byBird(bird) if bird and (bird != 'oddbird') else resources %}
  {% if resources %}
    {% set list_title = index | displayName if index else none %}
    {% set list_title = bird + "'s" if bird else list_title %}
    {% set list_title = list_title | capitalize + ' Resources' if list_title else none %}

    {{ layout.title(index_title or list_title) }}
    <ul>
      {% for item in resources %}
        <li>
          [{{ item.date | getDate('iso') }}]
          {{ utility.link_if(
            item.data.banner or item.data.title,
            item.url
          ) }}
        </li>
      {% endfor %}
    </ul>
  {% endif %}
</main>
