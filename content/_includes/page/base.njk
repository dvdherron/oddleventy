{%- import 'utility.macros.njk' as utility -%}

{% include "page/header.njk" %}

<main data-layout="main">
  {% if (content or summary) %}
    <div
      data-main
      data-typeset
      {{ utility.attr_if('data-erase', 'off' if erasure else none) }}>

      {% if summary %}
        <div class='intro'>{{ summary | md | safe }}</div>
      {% endif %}

      {{ content | typogr | safe }}
    </div>
  {% endif %}
</main>
