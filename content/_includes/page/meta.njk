{%- import 'utility.macros.njk' as utility -%}
{%- import 'tags.macros.njk' as tagutils -%}
{%- import 'birds.macros.njk' as birds -%}
{%- import 'contact.macros.njk' as contact -%}

{% set public_tags = tags | publicTags %}
{% set linked = {
  'venue': venue,
  'url': canonical or url
} if venue else none %}

{% set sub = renderData.sub or sub %}
{% set project_links = project and (project.source or project.docs or project.url) %}

{% set dates = utility.datetime(
  start=start or date or page.date,
  end=end,
  prefix=true
) if bird and bird != 'oddbird' else none %}

{% if sub or public_tags or linked or author or project_links or slides %}
  <div id="meta">
    {% if sub %}
      <p class="subtitle">
        {{ sub | mdInline | safe }}
        {%- if sub and dates %}, {% endif %}
        {{ dates }}
      </p>
    {% endif %}

    {% if author or client %}
      <p class="byline">
        {% if author %}
          <i>by</i>
          {{ birds.authors(author, collections) }}
        {% endif %}

        {% if linked %}
          <i>at</i>
          {{ utility.link_if(
            content=linked.venue | mdInline | safe,
            url=linked.url,
            attrs={'rel': 'bookmark'}
          ) }}
        {% endif %}

        {% if client %}
          <i>for</i>
          <strong>{{ client | mdInline | safe }}</strong>
        {% endif %}

        {{ utility.datetime(
          start=start or date or page.date,
          end=end,
          format='long',
          is_pubdate=pubdate or page.date,
          prefix=true
        ) }}

        {% if adr %}
          <i>in</i>
          <span class="adr">
            {{ adr | typogr | safe }}
          </span>
        {% endif %}
      </p>
    {% elif social %}
      {{ contact.social(
        data=social,
        name=bird | capitalize
      ) }}
    {% endif %}

    {% if public_tags %}
      <div class="page-tags">
        {% include "icons/tags.svg" %}
        {{ tagutils.tag_list(
          tags=tags,
          all=collections.all
        ) }}
      </div>
    {% endif %}

    {% if project_links or slides %}
      <ul class="page-links">
        {% if slides %}
          <li>{{ utility.link_if('slides »', slides) }}</li>
        {% endif %}

        {% if project and project.url %}
          <li>{{ utility.link_if('site »', project.url) }}</li>
        {% endif %}
        {% if project and project.source %}
          <li>{{ utility.link_if('source »', project.source) }}</li>
        {% endif %}
        {% if project and project.docs %}
          <li>{{ utility.link_if('docs »', project.docs) }}</li>
        {% endif %}
      </ul>
    {% endif %}
  </div>
{% endif %}
