{%- import 'embed.macros.njk' as embed -%}
{% import 'utility.macros.njk' as utility %}

{% if summary or action %}
  <div id="intro" class="summary">
    {% if badges %}
      <ul class="oss-badges">
        {% for badge in badges %}
          <li>
            {{ utility.link_if(
              content=embed.img(
                src=badge.src,
                alt=badge.name
              ),
              url=badge.url
            ) }}
          </li>
        {% endfor %}
      </ul>
    {% endif %}

    {{ summary | md | safe }}

    {% if action %}
      {{ utility.main_action(action.text, action.url) }}
    {% elif venue and canonical %}
      {{ utility.main_action(['See more at', venue, 'Â»'] | join(' '), canonical) }}
    {% endif %}
  </div>
{% endif %}
